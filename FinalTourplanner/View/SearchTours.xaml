<UserControl x:Class="FinalTourplanner.View.SearchTours"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalTourplanner.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel LastChildFill="True">
            <TextBlock Text="Search tours:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="240" Padding="6" ToolTip="Type part of the tour name"/>
            <Button Content="Clear" Command="{Binding ClearCommand}" Margin="8,0,0,0" Padding="8,2"/>

            <!-- Progress bar funktioniert nicht wirjklich
            <ProgressBar Width="120" Height="6"
                         IsIndeterminate="{Binding IsSearching}"
                         Margin="8,0,0,0" VerticalAlignment="Center"/>
            -->


            <!-- Braucht man nicht wirklich
            <Button Content="Open" Command="{Binding OpenDetailsCommand}" Margin="8,0,0,0" Padding="10,4"/>
            -->
        </DockPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Results}" SelectedItem="{Binding SelectedTour}"
                  Margin="0,10,0,0">
            <ListView.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding OpenDetailsCommand}"/>
            </ListView.InputBindings>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="220" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Description" Width="260" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="From" Width="160" DisplayMemberBinding="{Binding FromInput}"/>
                    <GridViewColumn Header="To" Width="160" DisplayMemberBinding="{Binding ToInput}"/>
                    <GridViewColumn Header="Transport" Width="120" DisplayMemberBinding="{Binding TransportType}"/>
                    <GridViewColumn Header="Distance" Width="90" DisplayMemberBinding="{Binding Distance}"/>
                    <GridViewColumn Header="Est. Time" Width="110" DisplayMemberBinding="{Binding EstimatedTime}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
